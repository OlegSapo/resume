<div>
    <main>

        <ol class="breadcrumb">
            {{#each breadcrumb}}
            <li class="breadcrumb-item">
                {{#if url}}
                <a href={{url}}>{{name}}</a>
                {{else}}
                {{name}}
                {{/if}}
            </li>
            {{/each}}
        </ol>
        <br>

        {{#with productData}}
        <div class="row">

            <div class="col-6">
                <div class="card">
                    <img class="card-img-top" src={{img}}>
                </div>
                <br>
                <div class="card">
                    <div class="card-body">
                        <div class="card-title"><b>{{info.title}}</b></div>
                        <p>{{info.about}}</p>
                        <h3>{{info.price}}</h3>
                        {{#each info.category}}
                        {{#if isHot}}
                        <span class="badge text-bg-warning">{{name}}</span>
                        {{/if}}
                        {{#if isNew}}
                        <span class="badge text-bg-primary">{{name}}</span>
                        {{/if}}
                        {{#if isBonus}}
                        <span class="badge text-bg-info">{{name}}</span>
                        {{/if}}
                        {{/each}}
                    </div>
                </div>
            </div>

            <div class="col-1"></div>

            <div class="col-5">
                <table class="table table-bordered">
                    <thaed>
                        <tr>
                            {{#each item.head}}
                            <th>
                                <div>{{this}}</div>
                            </th>
                            {{/each}}
                        </tr>
                    </thaed>
                    <tbody>
                        {{#each item.body}}
                        <tr>
                            {{#each this}}
                            {{#if @first}}
                            <th>{{this}}</th>
                            {{else}}
                            <td>{{this}}</td>
                            {{/if}}
                            {{/each}}
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

                <div class="card">
                    <div class="card-header">
                        {{param.title}}
                    </div>
                    {{#each param.list}}
                    <div class="list-group ps-3">
                        {{this}}
                    </div>
                    {{/each}}
                </div>
                <br>

                {{#if alert.isError}}
                <div class=" alert alert-danger">
                    <span><b>Danger! </b>This is a danger alert â€” check it out!</span>
                </div>
                {{/if}}

            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body">
                {{#each actionList}}
                {{#if isWarning}}
                <button class="btn btn-warning"><span class="text-light">{{name}}</span></button>
                {{/if}}
                {{#if isError}}
                <button class="btn btn-outline-danger ms-3">{{name}}</button>
                {{/if}}
                {{#if isSuccess}}
                <button class="btn btn-success ms-3">{{name}}</button>
                {{/if}}
                {{#if isGood}}
                <button class="btn btn-outline-success ms-3">{{name}}</button>
                {{/if}}
                {{/each}}
            </div>
        </div>
        {{/with}}

        <br class="mt-3">
        <hr class="my-5">

        {{#with goodsOtherBlock}}
        <div class="display-6 text-center mb-3"><b>{{title}}</b></div>
        <div class="row">
            {{#each cards}}
            <div class="col-4">
                {{> shopcard crd=this}}
            </div>
            {{/each}}
        </div>
        {{/with}}

        <hr class="my-5">

    </main>
</div>