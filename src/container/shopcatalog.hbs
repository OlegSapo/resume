<div>
    <main>

        {{> breadcrumb brdcrmb=breadcrumb}}

        <h2 class="mt-5">{{header}}</h2>
        <div class="row g-2 mt-4">
            {{#each sortBlock}}
            <div class="col-3">
                <select class="form-select">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value={{value}}>{{text}}</option>
                    {{/each}}
                </select>
            </div>
            {{/each}}
        </div>

        <div class="row g-2 mt-5 mb-5">
            {{#with filterBlock}}
            <div class="col-4">
                <div class="card">
                    <div class="card-body pt-1">

                        {{#with sellers}}
                        <div>{{title}}</div>
                        {{#each list}}
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="checkbox" name="sellers">
                            <label class="form-check-label">{{value}}</label>
                        </div>
                        {{/each}}
                        {{/with}}
                        <hr class="my-3">

                        {{#with brands}}
                        <div>{{title}}</div>
                        <input class="form-control mt-3" placeholder={{input.placeholder}}>
                        {{#each options}}
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="checkbox" name="brands">
                            <label class="form-check-label">{{value}}</label>
                        </div>
                        {{/each}}
                        {{/with}}
                        <hr class="my-3">

                        {{#with price}}
                        <div>{{title}}</div>
                        <input class="form-control mt-3" placeholder="{{range.from}}">
                        <input class="form-control mt-3" placeholder="{{range.to}}">
                        <a class="btn btn-outline-secondary mt-3" src={{button.link}}
                            target="_blank">{{button.text}}</a>
                        {{/with}}
                        <hr class="my-3">

                        {{#each filterList}}
                        <div>{{title}}</div>
                        {{#each options}}
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="checkbox" name="flt">
                            <label class="form-check-label">{{value}}</label>
                        </div>
                        {{/each}}
                        {{#unless @last}}
                        <hr class="my-3">
                        {{/unless}}
                        {{/each}}

                    </div>
                </div>
            </div>
            {{/with}}
