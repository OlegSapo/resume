<div>
    <main>

        <div class="row g-2">
            {{#with formBlock}}
            <div class="col-8">
                <h2>{{header}}</h2>
                <div class="mt-3">
                    <span>{{rating.title}}:</span>
                    <span>{{rating.value}}</span>
                </div>
                {{!-- --}}
                {{#with actionBlock}}
                <ul class="nav nav-tabs">
                    {{#each tabs}}
                    <li class="nav-item col-4">
                        {{#if isActive}}
                        <a class="nav-link active text-center" href="#"><b>{{text}}</b></a>
                        {{else}}
                        <a class="nav-link text-center" href="#">{{text}}</a>
                        {{/if}}
                    </li>
                    {{/each}}
                </ul>
                <hr class="my-5">

                <div class="card">
                    {{#with report}}
                    <div class="card-body">
                        <div>{{title}}</div>
                        <a class="btn btn-secondary mt-2" href={{button.link}} target="_blank">{{button.text}}</a>
                    </div>
                    {{/with}}
                </div>
                <hr class="my-5">
                {{/with}}

                {{#with feedbackBlock}}
                <h3>{{title}}</h3>
                <div class="col-12 mt-5">
                    {{#each buttons}}
                    {{#if isWarning}}
                    <a class="btn btn-warning text-light ps-1 pe-1 me-1" href={{link}} target="_blank">{{text}}</a>
                    {{/if}}
                    {{#if isSuccess}}
                    <a class="btn btn-success text-light ps-1 pe-1 me-1" href={{link}} target="_blank">{{text}}</a>
                    {{/if}}
                    {{#if isDanger}}
                    <a class="btn btn-danger text-light ps-1 pe-1 me-1" href={{link}} target="_blank">{{text}}</a>
                    {{/if}}
                    {{/each}}
                </div>
                {{/with}}
            </div>
            {{!-- --}}
            {{#with goodsInfo}}
            <div class="col-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <img src={{photo}} alt="foto product">
                            <h5 class="mt-3 mb-0">{{name}}</h5>
                        </div>
                    </div>
                </div>
                <div class="col-12 mt-3">
                    <div class="card">
                        <div class="card-body">
                            <h5>{{price}}</h5>
                            {{#if inMarket}}
                            <div>Є в наявності</div>
                            {{else}}
                            <div>Немає в наявності</div>
                            {{/if}}
                            {{#each buttons}}
                            {{#if isPrimary}}
                            <a class="btn btn-primary mt-2" href={{link}} target="_blank">{{text}}</a>
                            {{/if}}
                            {{#if isSecondary}}
                            <a class="btn btn-secondary mt-2" href={{link}} target="_blank">{{text}}</a>
                            {{/if}}
                            {{/each}}
                        </div>
                    </div>
                </div>
                <div class="col-12 mt-3">
                    <div class="card">
                        <div class="card-body">
                            <div>{{seller.title}}: <b>{{seller.value}}</b></div>
                        </div>
                    </div>
                </div>
            </div>
            {{/with}}
            {{/with}}
        </div>
        <hr class="my-5">

        {{#each reviewList}}
        {{!-- <div class="card mb-5">
            <div class="card-body">

                <div class="card">
                    <div class="card-body">
                        {{#with title}}
                        <h5 class="mb-0">{{userName}}</h5>
                        <div>{{caption}}</div>
                        <div class="mt-2">{{date}}</div>
                        {{/with}}
                        <hr class="my-2">

                        {{#with reviewBody}}
                        <div>{{seller.title}}: {{seller.value}}</div>
                        <div class="mt-3">{{rating.title}}: {{rating.value}}</div>

                        {{#each text}}
                        <p class="mt-3">{{this}}</p>
                        {{/each}}

                        {{#with advantages}}
                        <div><b>{{title}}:</b></div>
                        <div>{{text}}</div>
                        {{/with}}

                        {{#with disadvantages}}
                        <div class="mt-3"><b>{{title}}:</b></div>
                        <div class="mb-3">{{text}}</div>
                        {{/with}}

                        {{#each images}}
                        <img class="me-1" src={{this}} alt="foto">
                        {{/each}}
                        {{/with}}
                    </div>
                </div>

                {{#each reviewBody.coments}}
                <div class="row g-2 mt-2">
                    <div class="col-1"></div>
                    <div class="col-11">
                        <div class="card">
                            <div class="card-body">
                                <h5>{{userName}}</h5>
                                <div class="mt-3">{{date}}</div>
                                <div class="mt-2">{{text}}</div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div> --}}
        {{> reviewItem item=this}}
        {{/each}}

    </main>
</div>