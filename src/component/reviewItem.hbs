{{#with item}}
<div class="card mb-5">
    <div class="card-body">

        <div class="card">
            <div class="card-body">
                {{#with title}}
                <h5 class="mb-0">{{userName}}</h5>
                <div>{{caption}}</div>
                <div class="mt-2">{{date}}</div>
                {{/with}}
                <hr class="my-2">

                {{#with reviewBody}}
                <div>{{seller.title}}: {{seller.value}}</div>
                <div class="mt-3">{{rating.title}}: {{rating.value}}</div>

                {{#each text}}
                <p class="mt-3">{{this}}</p>
                {{/each}}

                {{#with advantages}}
                <div><b>{{title}}:</b></div>
                <div>{{text}}</div>
                {{/with}}

                {{#with disadvantages}}
                <div class="mt-3"><b>{{title}}:</b></div>
                <div class="mb-3">{{text}}</div>
                {{/with}}

                {{#each images}}
                <img class="me-1" src={{this}} alt="foto">
                {{/each}}
                {{/with}}
            </div>
        </div>

        {{#each reviewBody.coments}}
        <div class="row g-2 mt-2">
            <div class="col-1"></div>
            <div class="col-11">
                <div class="card">
                    <div class="card-body">
                        <h5>{{userName}}</h5>
                        <div class="mt-3">{{date}}</div>
                        <div class="mt-2">{{text}}</div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>
{{/with}}