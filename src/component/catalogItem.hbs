{{#with item}}
<div class="card">
    <img src={{img}} alt="foto product" class="card-img-top">
    <div class="card-body">
        <div class="mt-0">
            {{#if isHot}}
            <div class="badge text-bg-warning rounded-pill text-light">HOT!</div>
            {{/if}}
            {{#if isNew}}
            <div class="badge text-bg-primary rounded-pill">New</div>
            {{/if}}
        </div>
        {{#if isFast}}
        <div class="badge text-bg-success mt-3">Швидка доставка</div>
        {{/if}}
        {{#if isFree}}
        <div class="badge text-bg-secondary mt-2">Швидка доставка</div>
        {{/if}}
        <h5 class="mt-3">{{name}}</h5>
        <div class="mt-3">{{review.amount}} {{review.text}}</div>
        <h5 class="mt-3">{{price}}</h5>
        <div class="mt-3">{{delivery}}</div>
        {{#each buttons}}
        {{#if isPrimary}}
        <a class="btn btn-primary mt-3" src={{link}}target="_blank">{{text}}</a>
        {{/if}}
        {{#if isSecondary}}
        <a class="btn btn-secondary mt-2 mb-3" src={{link}}target="_blank">{{text}}</a>
        {{/if}}
        {{/each}}
        <ul class="mb-0">
            {{#each characteristics}}
            <li>{{title}}: {{value}}</li>
            {{/each}}
        </ul>
    </div>
</div>
{{/with}}